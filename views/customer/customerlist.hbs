<div class="container-fluid">
    <h1 class="mt-4">Customer</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Customer Table
        </div>
        {{!-- <div class="d-flex justify-content-center">
            <a href="../products/addnew">
                <button type="button" class="btn aqua-gradient btn-primary"><i class="fas fa-plus"></i>Add new</button>
            </a>
        </div> --}}
        <div class="d-flex mx-4 mt-3">
            <form action="/customer/search?page=1" method="GET" class="form-inline md-form mr-auto mb-4">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search"
                    name="searchedcustomer">
                <button class="btn aqua-gradient btn-primary border-0 text-uppercase" type="submit"><i
                        class="fa fa-search" aria-hidden="true"></i></button>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th style="width:40%">Name</th>
                            <th style="width:40%">Account</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Account</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {{#each customers}}
                        <tr>
                            <td>{{CUS_NAME}}</td>
                            <td>{{CUS_EMAIL}}</td>
                            <td>
                                {{!-- <a href="../products/detail.{{_id}}">
                                    <i class="fas fa-edit text-success"></i>
                                </a>
                                <a>
                                    <i class="fas fa-trash text-danger"
                                        onclick="delete_product(&quot;{{title}}&quot;,'foods')"></i>
                                </a> --}}
                                <a href="/customer/detail/{{_id}}">
                                    View
                                    <i class="fas fa-eye text-success"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>

            </div>
        </div>
        <div class="d-flex justify-content-center">
            {{{paginateHelper pagination}}}
        </div>

    </div>
</div>

