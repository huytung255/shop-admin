<div class="container-fluid">
    <h1 class="mt-4">Customer Information</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus mr-1"></i>
            Information
        </div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="id">ID</label>
                    <input type="text" class="form-control" id="id" name="id" value={{staff.STAFF_ID}} readonly>   
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control"  name="name" value='{{staff.STAFF_NAME}}' readonly>
                </div>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" name="username" value={{staff.USERNAME}} readonly>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" value='{{staff.STAFF_EMAIL}}' readonly>
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="phone" class="form-control" name="phone" value='{{staff.STAFF_PHONE}}' readonly>
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <textarea class="form-control" rows="2" name="address" readonly>{{staff.STAFF_ADDRESS}}</textarea>
                </div>
            </form>
            <a href="/staff">
                <button class="btn btn-primary float-left">Back</button>
            </a>
            <button id="btnlock" class="btn btn-danger float-right" onclick="delete_staff('{{staff._id}}')">Delete staff</button>
        </div>
    </div>
</div>

<script>
    function delete_staff(id) {
        const form = document.createElement("form");
        form.method = "post";
        form.action = "/staff/delete/" + id;
        document.body.appendChild(form);
        form.submit();
    }
</script>
