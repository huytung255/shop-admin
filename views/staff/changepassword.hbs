<div class="container-fluid">
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus mr-1"></i>
            Change Password
        </div>
        <div class="card-body">
            {{#if errors}}
            {{#each errors}}
            <div class="alert alert-dismissible alert-danger animate__animated animate__shakeY">
                <p class="d-flex justify-content-center">{{this}}</p>
            </div>
            {{/each}}
            {{/if}}
            <form action="/staff/changepassword" method="POST">
                <div class="form-group">
                    <label for="id">Current Password</label>
                    <input type="password" class="form-control" id="id" name="current_password">
                </div>
                <div class="form-group">
                    <label for="name">New Password</label>
                    <input type="password" class="form-control" name="new_password">
                </div>
                <div class="form-group">
                    <label for="username">Retype Password</label>
                    <input type="password" class="form-control" name="retype_password">
                </div>
                <button type="submit" class="btn btn-primary float-right">Change Password</button>
            </form>
            <button class="btn btn-primary float-left" onclick="goBack()">Back</button>
        </div>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>