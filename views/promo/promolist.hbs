<div class="container-fluid">
    <h1 class="mt-4">Thông tin khuyến mãi</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Thông tin khuyến mãis</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Promo Table
        </div>
        <div class="d-flex justify-content-center my-2">
            <a href="../promo/create">
                <button type="button" class="btn aqua-gradient btn-primary px-5 py-3 border-0 text-uppercase"><i
                        class="fas fa-plus mr-2"></i>Add new</button>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered"  width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center align-middle w-25 font-weight-bold bg-light">Hình ảnh </th>
                            <th class="text-center align-middle w-25 font-weight-bold bg-light">Tiêu đề</th>
                            <th class="text-center align-middle w-25 font-weight-bold bg-light">Trạng thái</th>
                            <th class="text-center align-middle w-25 font-weight-bold bg-light">Chỉnh sửa</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="text-center align-middle w-25 font-weight-bold bg-light">Hình ảnh </th>
                            <th class="text-center align-middle w-25 font-weight-bold bg-light">Tiêu đề</th>
                            <th class="text-center align-middle w-25 font-weight-bold bg-light">Trạng thái</th>
                            <th class="text-center align-middle w-25 font-weight-bold bg-light">Chỉnh sửa</th>
                        </tr>
                    </tfoot>
                    <tbody>

                        {{#each promos}}
                        <tr>
                            <td class="d-flex justify-content-center"> <img src="{{IMAGE}}" alt="" width="100"
                                    height="100"> </td>
                            <td class="text-center align-middle">{{TITLE}}</td>
                            <td class="text-center align-middle">{{#if ACTIVE}}Active{{/if}} {{#unless ACTIVE}}Inactive{{/unless}}</td>
                            <td class="text-center align-middle">
                                <a href="../promo/detail?id={{_id}}">
                                    <i class="fas fa-edit text-success"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>

            </div>
        </div>
        <div class="d-flex justify-content-center">
            {{{paginateHelper pagination paginationClass="pagination"}}}
        </div>

    </div>
</div>
